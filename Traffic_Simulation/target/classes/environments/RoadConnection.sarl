package environments

import java.util.ArrayList
import framework.math.Point2f

/** 
 * @author jerem
 * 
 */
class RoadConnection {

	var position : Point2f
	
	var onSegments : ArrayList<RoadSegment>
	
	new (pos : Point2f)
	{
		position = pos
		onSegments = new ArrayList<RoadSegment>
	}
	
	def getPosition : Point2f {
		return position
	}
	
	def addConnectionOnSegment(seg : RoadSegment){
		onSegments.add(seg)
	}
	
}
