package motionalgo

import framework.math.Vector2f
import framework.^agent.MotionAlgorithmOutput
import framework.math.Point2f

/** 
 * Pursue Behavior.
 * 
 * @author St&eacute;phane GALLAND &lt;stephane.galland@utbm.fr&gt;
 * @version $Name$ $Revision$ $Date$
 */
interface PursueAlgorithm {
		/** 
		 * @param position is the current position of the entity.
		 * @param linearSpeed is the current linear speed of the entity.
		 * @param maxLinear is the maximal linear speed or acceleration (depending on getType()) of the entity.
		 * @param targetPosition is the position of the target.
		 * @param targetLinearMotion is the linear motion of the target.
		 * @return the behaviour output.
		 */
	def run(position : Point2f, linearSpeed : float, maxLinear : float, targetPosition : Point2f,
		targetLinearMotion : Vector2f) : MotionAlgorithmOutput

}

class DelegatePursueAlgorithm implements PursueAlgorithm {

	val seek : SeekAlgorithm

	new (seek : SeekAlgorithm) {
		assert seek !== null
		this.seek = seek
	}

	override run(position : Point2f, linearSpeed : float, maxLinear : float, targetPosition : Point2f,
		targetLinearMotion : Vector2f) : MotionAlgorithmOutput {
		var seekTarget = targetPosition - targetLinearMotion
		this.seek.run(position, linearSpeed, maxLinear, seekTarget)
	}

}
