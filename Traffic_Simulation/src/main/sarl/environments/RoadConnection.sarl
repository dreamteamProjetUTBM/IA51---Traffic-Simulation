package environments

import java.util.ArrayList
import org.newdawn.slick.geom.Vector2f

/** 
 * @author jerem
 * 
 */
class RoadConnection {

	var position : Vector2f
	
	var onSegments : ArrayList<RoadSegment>
	
	new (pos : Vector2f)
	{
		position = pos
		onSegments = new ArrayList<RoadSegment>
	}
	
	def getPosition : Vector2f{
		return position
	}
	
	def addConnectionOnSegment(seg : RoadSegment){
		onSegments.add(seg)
	}
	
}
