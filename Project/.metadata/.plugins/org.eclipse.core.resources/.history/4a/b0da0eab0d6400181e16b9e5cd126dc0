/** 
 * 
 */
package gamestates

import org.newdawn.slick.state.StateBasedGame
import org.newdawn.slick.SlickException
import org.newdawn.slick.GameContainer

/** 
 * @author jerem
 * 
 */

class SimulationWindow extends StateBasedGame {
	// Les ids de tous les GameState du jeu
	val static final GS_MAIN_MENU = 0;
	val static final GS_SIMULATION = 1;
	val GS_PAUSE_MENU = 2;
	val GS_OPTION_MENU = 3;
	val GS_GAME_OVER = 4;
	
	new(name : String) {
		super(name);
	}

	def override initStatesList(arg0 : GameContainer) throws SlickException {
		///addState( new MainMenuGameState());
		addState( new SimulationGameState());

	}
	
	def static GS_MAIN_MENU() : int{
		return GS_MAIN_MENU
	}

	def static GS_SIMULATION() : int {
		return GS_SIMULATION
	}
}
